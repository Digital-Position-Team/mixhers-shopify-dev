{% assign tags = article.tags | join: ',' %}
<div class="standard-article-card">
<a href="{{ article.url }}" class="article-card{% if featuredCard %} article-card--featured{% endif %}" data-tag="{{ tags }}">
  <div class="article-image">
    {% if article.image %}
      {{ article.image | image_url: width: 500 | image_tag: class: 'article-image-tag' }}
    {% else %}
      {{ blog.metafields.custom.default_featured_image | image_url: width: 500 | image_tag: class: 'article-image-tag' }}
    {% endif %}
    {% if featuredCard %}
      {% assign firstTag = article.tags[0] %}
      {% if firstTag %}
        <div class="article-tag">{{ firstTag }}</div>
      {% endif %}
    {% endif %}
  </div>

  <div class="article-content">
    <h3 class="article-title">{{ article.title }}</h3>
    <p class="article-excerpt">{{ article.excerpt_or_content | strip_html | truncatewords: 15 }}</p>
    {% if article.metafields.custom.read_time %}
      <p class="article-readtime">{{ article.metafields.custom.read_time }} min read</p>
    {% endif %}
  </div>
</a>
</div>


<style>
  .standard-article-card a {
    color: inherit;
    text-decoration: none;
}
.standard-article-card .article-image-tag {
    width: 100%;
    max-width: 100%;
    height: 180px;
    object-fit: cover;
}
.standard-article-card h3.article-title {
    font-size: 24px;
    font-family: 'Faire Sprig';
    line-height: 1.3;
    margin: 5px 0 10px 0;
}
.standard-article-card h3.article-title {}
.standard-article-card p.article-excerpt {
    margin: 0 0 10px 0;
    line-height: 1.6;
}
.standard-article-card p.article-readtime {
    margin: 0;
    letter-spacing: 1.2px;
    font-size: 12px;
}
.standard-article-card .article-tag {
    border: 1px solid #402650;
    background: #fff;
    box-shadow: -4px 4px #dcd6df;
    display: flex;
    padding: 13.5px 48px;
    align-items: center;
    text-align: center;
    margin: -25px auto 0 auto;
    font-style:italic;
}

.standard-article-card .article-image {
    display: flex;
    flex-direction: column;
}
</style>