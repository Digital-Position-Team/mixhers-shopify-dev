<div class="featured-product-container {% if mobile %}mobile-only{% else %}hide-mobile{% endif %}">
  {% if mobile %}
    <div class="featured-product-collapse">
      <h4 class="headers-9">Featured Product</h4>
      {% render 'icon' with 'down-arrow' %}
    </div>
  {% else %}
    <h4 class="headers-9">Featured Product</h4>
  {% endif %}
  <a href="{{ featured_product.url }}" class="featured-product">
    {{ featured_product_img | image_url: width: 80 | image_tag }}
    
    <div class="featured-product-title-wrapper">
      <h3 class="headers-6">{{ featured_product.title }}</h3>
      <p class="italic-subheaders-6">{{ featured_product.metafields.descriptors.subtitle }}</p>
    </div>
  </a>
</div>

{% if mobile %}
<script>
  let featuredProductCollapse = document.querySelector('.featured-product-collapse');
  let featuredProductContainer = document.querySelector('.featured-product-container.mobile-only');

  featuredProductCollapse.addEventListener('click', () => {
    console.log('clicked')
    featuredProductContainer.classList.toggle('collapsed');
  });
</script>
{% endif %}
<style>
  
.featured-product-title-wrapper {
    width: calc(100% - 80px);
}
.featured-product-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 20px;
}
.featured-product-container h4 {
    margin: 0px;
    font-weight: 600;
}
.featured-product {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    gap: 12px;
    text-decoration: none;
    transition: height .3s ease-in-out;
}

a.featured-product img {
    max-height: 95px;
    width: 100%;
    max-width: 80px;
    height: auto;
    display: block;
}

.featured-product-title-wrapper .italic-subheaders-6 {
    font-family: Suisse Works;
    font-style: italic;
    font-weight: 450;
    font-size: 13px;
    line-height: normal;
    letter-spacing: .12em;
    color: #402650;
    margin-bottom: 0;
    margin-top: 0px;
}

.featured-product-title-wrapper  .headers-6 {
    font-size: 22px;
    font-weight: 500;
    line-height: normal;
    letter-spacing: .04em;
    text-align: left;
    margin-bottom: 5px;
    margin-top: 0px;
}
.featured-product-collapse {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    cursor: pointer;
    z-index: 2;
}
@media(max-width:991px){
  .featured-product-container.mobile-only {
      position: sticky;
      bottom: 0;
      height: 154px;
      background-color: #fff;
      width: 100vw;
      margin-left: -5rem;
      margin-right: -5rem;
      padding: 15px;
      gap: 0;
      box-shadow: 0 0 4px #40265099;
      transition: height .3s ease-in-out;
  }
  .featured-product-container.mobile-only.collapsed {
      height: auto;
      overflow: hidden;
      min-height: auto;
  }
  .featured-product-container.mobile-only .featured-product {
      opacity: 1;
      transition: opacity .5s ease-in-out .3s, height .3s ease-in-out 0s;
      margin-top:3px;
  }
  .featured-product-container.mobile-only.collapsed .featured-product {
      height: 0;
      overflow: hidden;
      opacity: 0;
      margin-top:0px;
  }
}
  @media screen and (min-width: 750px) {
  .featured-product-container.mobile-only {
      margin-left: -5rem;
      margin-right: -5rem;
    }
}
</style>
