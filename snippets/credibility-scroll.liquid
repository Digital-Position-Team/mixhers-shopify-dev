<style>
  /* Animation timing matches the old default (90s) */
  .credibility-scroll-group {
    display: inline-flex;
    gap: 28px;
    animation: credibilityScroll 90s linear infinite backwards;
  }
  .credibility-scroll-container { overflow: hidden; }
  .credibility-scroll-wrapper {
    display: flex;
    align-items: center;
    gap: 28px;
    white-space: nowrap;
  }
  .credibility-scroll-item {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 8px 18px;
  }
  .credibility-scroll-item svg {
    width: 28px;
    height: 28px;
    color: currentColor;
  }
  .desktop-only { display: none; }

  @keyframes credibilityScroll {
    0%   { transform: translateX(0); }
    100% { transform: translateX(-100%); }
  }

  @media screen and (min-width: 601px) {
    .desktop-only { display: inline-flex; }
  }
  @media screen and (max-width: 600px) {
    .credibility-scroll-group { animation: none; }
  }
</style>
