{% liquid
  assign icon_color = section.settings.icon_color
%}

<style>
  .scrolling-text-wrapper {
    overflow: hidden;
    white-space: nowrap;
    padding: 20px 0;
    font-family: 'Faire Sprig', serif;
    font-size: {{ section.settings.text_size }}px;
    color: {{ section.settings.text_color }};
  }
  .scrolling-text-track {
    display: inline-block;
    white-space: nowrap;
    animation: scroll-left {{ section.settings.scroll_duration }}s linear infinite;
  }
  .scrolling-text-item {
    display: inline-flex;
    align-items: center;
    margin-right: 50px;
  }
  .scrolling-text-icon {
    margin-right: 10px;
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    color: {{ icon_color }};
    display: inline-flex;
  }

  @keyframes scroll-left {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>

<div class="scrolling-text-wrapper">
  <div class="scrolling-text-track">
    {% for i in (1..2) %} 
      {% for block in section.blocks %}
        <span class="scrolling-text-item">
          <span class="scrolling-text-icon">{{ section.settings.custom_icon }}</span>
          <{{ section.settings.heading_type }}>{{ block.settings.text }}</{{ section.settings.heading_type }}>
        </span>
      {% endfor %}
    {% endfor %}
  </div>
</div>
          {% schema %}
{
  "name": "Scrolling Text Section",
  "settings": [
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Text Font Size",
      "default": 16
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon Color",
      "default": "#FF59E4"
    },
    {
      "type": "range",
      "id": "icon_size",
      "min": 10,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Icon Size",
      "default": 20
    },
    {
      "type": "range",
      "id": "scroll_duration",
      "min": 5,
      "max": 60,
      "step": 1,
      "unit": "s",
      "label": "Scroll Duration (seconds)",
      "default": 20
    },
    {
      "type": "textarea",
      "id": "custom_icon",
      "label": "Custom Icon (Text or SVG)",
      "default": "Â·"
    },
    {
      "type": "select",
      "id": "heading_type",
      "label": "Heading Tag",
      "default": "h4",
      "options": [
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" },
        { "value": "h4", "label": "H4" },
        { "value": "h5", "label": "H5" },
        { "value": "h6", "label": "H6" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "text_item",
      "name": "Text Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Your Text Here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Scrolling Center Text Section",
      "blocks": [
        {
          "type": "text_item",
          "settings": {
            "text": "Zero Calories"
          }
        },
        {
          "type": "text_item",
          "settings": {
            "text": "All Natural"
          }
        },
        {
          "type": "text_item",
          "settings": {
            "text": "Hormone Friendly"
          }
        },
        {
          "type": "text_item",
          "settings": {
            "text": "Highly Absorbable"
          }
        }
      ]
    }
  ]
}
            {% endschema %}
