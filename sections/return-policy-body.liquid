<style>
.return-policy-body {
  display: flex;
  flex-direction: column;
  padding: 25px;
  font-weight: 300;
}

@media (min-width: 768px) {
  .return-policy-body {
    padding: 0 30px;
  }
}

.return-policy-body__section {
  padding: 40px 0;
}

.return-policy-body__section:last-child {
  padding-bottom: 80px;
}

.return-policy-body__heading {
  padding-bottom: 24px;
  font-family: 'Faire Sprig', serif;
  font-weight: normal;
  font-size: 28px;
}

.return-policy-body__content {
  display: flex;
  flex-direction: column;
  gap: 30px;
  padding-top: 10px;
  padding-left: 10px;
  padding-right: 10px;
  font-weight: 300;
}

.return-policy-body__content p {
  margin: 0px;
}
.return-policy-body__content p strong {
  font-weight: bold;
}

.return-policy-body__content p:last-child {
  margin-bottom: 0;
}

.return-policy-body__cta {
  display: flex;
  flex-direction: column;
  gap: 18px;
  margin-top: 16px;
}

.return-policy-body__cta-text {
  padding: 0;
}

/* Use global button classes from theme-overrides.css */
.return-policy-body .btn {
  width: auto;
  max-width: fit-content;
  display: inline-block;
}
</style>

<div class="return-policy-body">
    {% for block in section.blocks %}
      <section class="return-policy-body__section" {{ block.shopify_attributes }}>
        {% render 'text', type: 'heading-3', content: block.settings.heading, class: 'return-policy-body__heading' %}
        <div class="return-policy-body__content">
          {{ block.settings.content }}
          {% if block.settings.show_button and block.settings.button_text != blank %}
            <div class="return-policy-body__cta">
              {% if block.settings.cta_text != blank %}
                <span class="return-policy-body__cta-text">{{ block.settings.cta_text }}</span>
              {% endif %}
              <a href="{{ block.settings.button_url }}" class="btn btn-black">
                {{ block.settings.button_text }}
              </a>
            </div>
          {% endif %}
        </div>
      </section>
    {% endfor %}
</div>

{% schema %}
{
  "name": "Return Policy Body",
  "max_blocks": 10,
  "blocks": [
    {
      "type": "content_section",
      "name": "Content Section",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Section Heading",
          "default": "Section Title"
        },
        {
          "type": "richtext",
          "id": "content", 
          "label": "Content",
          "default": "<p>Add your content here. You can use rich text formatting.</p>"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "Call to Action Text (Optional)",
          "info": "Text that appears above the button"
        },
        {
          "type": "checkbox",
          "id": "show_button",
          "label": "Show Button",
          "default": false
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        }
      ]
    }
  ]
}
{% endschema %}