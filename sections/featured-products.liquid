<style>
  .featured-products {
    background-color: #f4f9fd;
    border-top: 1px solid #000;
    border-bottom: 1px solid #000;
    padding: 80px 0;
    width: 100%;
    font-family: 'Buenos Aires', sans-serif;
  }
  
  .featured-products__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40px;
  }
  
  .featured-products__title {
    font-family: 'Faire Sprig', serif;
    font-size: 36px;
    margin: 0;
    line-height: 1.2;
  }
  
  .featured-products__view-all {
    display: flex;
    align-items: center;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    color: #000;
    transition: color 0.3s ease;
  }
  
  .featured-products__view-all:hover {
    color: var(--color-primary, #ff59e4);
  }
  
  .featured-products__view-all-icon {
    width: 18px;
    height: 18px;
    margin-left: 8px;
    transition: transform 0.3s ease;
  }
  
  .featured-products__view-all:hover .featured-products__view-all-icon {
    transform: translateX(5px);
  }
  
  .featured-products__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px;
  }
  
  .featured-products__item {
    border: 1px solid #000;
    background-color: #fff;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .featured-products__item:hover {
    transform: translateY(-5px);
    box-shadow: rgba(0, 0, 0, 0.1) 0px 10px 15px -3px;
  }
  
  .featured-products__image-wrapper {
    position: relative;
    padding-top: 100%; /* 1:1 Aspect Ratio */
    overflow: hidden;
  }
  
  .featured-products__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .featured-products__item:hover .featured-products__image {
    transform: scale(1.05);
  }
  
  .featured-products__content {
    padding: 20px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }
  
  .featured-products__product-title {
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 10px;
    line-height: 1.3;
  }
  
  .featured-products__product-description {
    font-size: 14px;
    line-height: 1.5;
    color: #4a4a4a;
    margin: 0 0 20px;
    flex-grow: 1;
  }
  
  .featured-products__cta {
    margin-top: auto;
    align-self: flex-start;
  }
  
  @media screen and (max-width: 1200px) {
    .featured-products__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  @media screen and (max-width: 990px) {
    .featured-products__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media screen and (max-width: 767px) {
    .featured-products {
      padding: 60px 0;
    }
    
    .featured-products__grid {
      grid-template-columns: 1fr;
    }
    
    .featured-products__header {
      flex-direction: column;
      text-align: center;
      gap: 15px;
    }
  }
</style>

<section class="featured-products">
  <div class="page-width">
    <div class="featured-products__header">
      <h2 class="featured-products__title">{{ section.settings.title }}</h2>
      {% if section.settings.view_all_text != blank and section.settings.view_all_url != blank %}
        <a href="{{ section.settings.view_all_url }}" class="featured-products__view-all">
          {{ section.settings.view_all_text }}
          <svg class="featured-products__view-all-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"/>
          </svg>
        </a>
      {% endif %}
    </div>
    
    <div class="featured-products__grid">
      {%- for product in section.settings.products -%}
        <div class="featured-products__item">
          <a href="{{ product.url }}" class="featured-products__image-wrapper">
            <img
              src="{{ product.featured_image | img_url: '500x' }}"
              alt="{{ product.featured_image.alt | escape }}"
              class="featured-products__image"
              width="500"
              height="500"
              loading="lazy"
            >
          </a>
          <div class="featured-products__content">
            <h3 class="featured-products__product-title">{{ product.title }}</h3>
            <p class="featured-products__product-description">
              {%- if product.description != blank -%}
                {{ product.description | strip_html | truncatewords: 20 }}
              {%- else -%}
                {{ product.content | strip_html | truncatewords: 20 }}
              {%- endif -%}
            </p>
            <a href="{{ product.url }}" class="btn btn-pink featured-products__cta">
              {{ section.settings.cta_text | default: 'Shop Now' }}
            </a>
          </div>
        </div>
      {%- else -%}
        {%- for i in (1..4) -%}
          <div class="featured-products__item">
            <div class="featured-products__image-wrapper">
              {{ 'product-' | append: i | placeholder_svg_tag: 'featured-products__image placeholder' }}
            </div>
            <div class="featured-products__content">
              <h3 class="featured-products__product-title">Sample Product Title</h3>
              <p class="featured-products__product-description">
                This is a sample product description. Select products to display real products from your store.
              </p>
              <span class="btn btn-pink featured-products__cta">
                {{ section.settings.cta_text | default: 'Shop Now' }}
              </span>
            </div>
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Featured Products"
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View All Text",
      "default": "View All"
    },
    {
      "type": "url",
      "id": "view_all_url",
      "label": "View All URL"
    },
    {
      "type": "product_list",
      "id": "products",
      "label": "Products",
      "limit": 12
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Shop Now"
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "settings": {
        "title": "Featured Products",
        "view_all_text": "View All",
        "cta_text": "Shop Now"
      }
    }
  ]
}
{% endschema %}
