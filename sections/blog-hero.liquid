{% stylesheet %}
.blog-hero-row {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

@media(min-width: 768px) {
  .blog-hero-row {
    display: grid;
    grid-template-columns: minmax(250px, 1fr) minmax(200px, auto);
    align-items: center;
    gap: 30px;
  }
}
.blog-hero--title-wrapper {
  min-width: 0;
  flex: 1;
}

.blog-hero--title-wrapper h1 {
  margin-bottom: 20px;
  margin-top: 0;
  font-size: 36px;
  letter-spacing: 1.8px;
  line-height: 1.15;
  font-weight: 500;
  word-wrap: break-word;
  overflow-wrap: break-word;
}
.blog-hero--img-wrapper {
  flex-shrink: 0;
  max-width: 100%;
}

.blog-hero--img-wrapper img {
  width: 100%;
  max-height: 250px;
  object-fit: contain;
  object-position: center;
}

@media(max-width: 767px) {
  .blog-hero--img-wrapper {
    max-width: 300px;
    margin: 0 auto;
  }
}
@media(min-width:768px){
  .blog-hero--title-wrapper h1 {
     font-size: 60px;
  }
  .blog-hero--img-wrapper img {
    max-height: 427px;
  }
}
@media(min-width:992px){
   .blog-hero--title-wrapper h1 {
     font-size: 80px;
     letter-spacing: 3.2px;
  }
  .blog-hero-row {
    grid-template-columns: minmax(400px, 1fr) minmax(320px, auto);
  }
}
  {% endstylesheet %}

<div class="blog-hero--wrapper" style="background: {{ section.settings.background }};">
  <div class="page-width">
    <div class="blog-hero-row">
      <div class="blog-hero--title-wrapper">
        <h1 class="blog-hero--title font-circular">{{ section.settings.title | escape }}</h1>
      </div>
      {% if section.settings.image != blank %}
        <div class="blog-hero--img-wrapper">
          <img
            src="{{ section.settings.image | image_url: width: 1500 }}"
            alt="{{ section.settings.title | escape }}"
            loading="lazy"
            width="auto"
            height="auto"
          >
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Blog Hero",
  "tag": "section",
  "class": "blog-hero-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Welcome to Our Blog"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "color_background",
      "id": "background",
      "label": "Background",
      "default": "linear-gradient(#ffffff, #000000)"
    }
  ],
  "presets": [
    {
      "name": "Blog Hero",
      "category": "Blog"
    }
  ]
}
{% endschema %}
