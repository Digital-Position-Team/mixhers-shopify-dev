{% stylesheet %}
.wholesale-benefits h1 {
  font-family: 'FAIRE Sprig', sans-serif;
}
.wholesale-benefits .checklist-text {
  font-size: 18px;
  font-family: 'Buenos Aires', sans-serif;
}
@media(min-width: 768px){
  .wholesale-benefits .checklist-text {
    font-size: 20px;
  }
}
{% endstylesheet %}

<div class="wholesale-benefits w-full flex flex-col md:flex-row items-stretch bg-gray-50">
  <!-- Left Frame (Image) -->
  <div class="w-full md:w-1/2 flex justify-center items-center" style="max-height: 656px;">
    {% if section.settings.image %}
      <img
        src="{{ section.settings.image | image_url }}"
        alt="{{ section.settings.image.alt | escape }}"
        class="w-full h-full object-cover"
        loading="lazy"
      >
    {% endif %}
  </div>

  <!-- Right Frame (Content) -->
  <div class="w-full md:w-1/2 flex flex-col items-start justify-center gap-4 bg-gray-blue p-8 min-h-[656px]">
    <h1 class="text-4xl md:text-5xl leading-tight mb-[30px]">
      {{ section.settings.heading }}
    </h1>

    <div class="checklist flex flex-col items-start gap-8">
      {% assign benefits = section.settings.benefits | newline_to_br | split: "<br />" %}
      {% for benefit in benefits %}
        <div class="checklist-item flex items-center gap-6">
          <div class="check-square">
            <svg width="24" height="25" viewBox="0 0 24 25" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 11.5L12 14.5L22 4.5" stroke="#FF59E4" stroke-width="2" stroke-linecap="square" stroke-linejoin="round"/>
              <path d="M21 12.5V19.5C21 20.0304 20.7893 20.5391 20.4142 20.9142C20.0391 21.2893 19.5304 21.5 19 21.5H5C4.46957 21.5 3.96086 21.2893 3.58579 20.9142C3.21071 20.5391 3 20.0304 3 19.5V5.5C3 4.96957 3.21071 4.46086 3.58579 4.08579C3.96086 3.71071 4.46957 3.5 5 3.5H16" stroke="#1A1A1A" stroke-width="2" stroke-linecap="square" stroke-linejoin="round"/>
            </svg>
          </div>
          <span class="checklist-text">{{ benefit }}</span>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.button_text != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="mt-[30px] font-sans rounded-[64px] bg-black text-white font-semibold text-[18px]
        leading-[20px] py-[10px] px-[18px] border-[4px] border-transparent cursor-pointer hover:bg-primary">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>


{% schema %}
{
  "name": "Wholesale Partner Section",
  "tag": "section",
  "class": "wholesale-partner-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Left Side Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Wholesale Partner Benefits"
    },
    {
      "type": "textarea",
      "id": "benefits",
      "label": "Benefits List (separate by new lines)",
      "default": "Low $200 Minimum Order\nPreview new products + Receive samples\nRetail-specific display pieces + Marketing Materials\nExclusive event invitations\nContent marketing inclusions\nProduct Education + Other Support Resources"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Apply Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Wholesale Partner Benefits"
    }
  ]
}
{% endschema %}
