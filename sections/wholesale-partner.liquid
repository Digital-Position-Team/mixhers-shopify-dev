{% stylesheet %}
.wholesale-benefits {
    display: grid;
    grid-template-columns: 1fr ;
   background-color: #f9fafb;
}
.wholesale-benefits__content{
    padding:32px;
    gap:5px;
}
.wholesale-benefits .checklist-text {
  font-size: 16px;
}
.checklist-item {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 22px;
    align-items: center;
    margin-bottom: 20px;
}
.wholesale-benefits__button{
   font-size:18px;
   margin-top:10px;
}
@media(min-width: 768px){
  .wholesale-benefits {
    grid-template-columns: 1fr 1fr ;
    min-height:656px;
  }
  .wholesale-benefits__heading{
    font-size:48px;
  }
  .wholesale-benefits__content{
      gap:10px;
  }
}
{% endstylesheet %}

<div class="wholesale-benefits">
  <div class="wholesale-benefits__image-wrapper">
    {% if section.settings.image %}
      <img src="{{ section.settings.image | image_url }}"  alt="{{ section.settings.image.alt | escape }}"
        class="wholesale-benefits__image img-100"  loading="lazy" width="" height=""
      />
    {% endif %}
  </div>
  <div class="wholesale-benefits__content flex-column-center">
    <h2 class="wholesale-benefits__heading underline-title font-serif">
      {{ section.settings.heading }}
    </h2>

    <div class="checklist">
      {% assign benefits = section.settings.benefits | newline_to_br | split: "<br />" %}
      {% for benefit in benefits %}
        <div class="checklist-item " >
            <svg width="24" height="25" viewBox="0 0 24 25" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 11.5L12 14.5L22 4.5" stroke="#FF59E4" stroke-width="2" stroke-linecap="square" stroke-linejoin="round"/>
              <path d="M21 12.5V19.5C21 20.0304 20.7893 20.5391 20.4142 20.9142C20.0391 21.2893 19.5304 21.5 19 21.5H5C4.46957 21.5 3.96086 21.2893 3.58579 20.9142C3.21071 20.5391 3 20.0304 3 19.5V5.5C3 4.96957 3.21071 4.46086 3.58579 4.08579C3.96086 3.71071 4.46957 3.5 5 3.5H16" stroke="#1A1A1A" stroke-width="2" stroke-linecap="square" stroke-linejoin="round"/>
            </svg>
          <span class="checklist-text font-sans">{{ benefit }}</span>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.button_text != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="wholesale-benefits__button custom-primary-btn">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>


{% schema %}
{
  "name": "Wholesale Partner Section",
  "tag": "section",
  "class": "wholesale-partner-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Left Side Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Wholesale Partner Benefits"
    },
    {
      "type": "textarea",
      "id": "benefits",
      "label": "Benefits List (separate by new lines)",
      "default": "Low $200 Minimum Order\nPreview new products + Receive samples\nRetail-specific display pieces + Marketing Materials\nExclusive event invitations\nContent marketing inclusions\nProduct Education + Other Support Resources"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Apply Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Wholesale Partner Benefits"
    }
  ]
}
{% endschema %}
