{% schema %}
{
  "name": "Standard Product FAQ",
  "tag": "section",
  "class": "standard-product-faq-section",
  "settings": [],
  "presets": [
    {
      "name": "Standard Product FAQ"
    }
  ]
}
{% endschema %}

{% assign faq_image = product.metafields.rebrand.faq_image.value %}
{% assign bottom_faqs = product.metafields.rebrand.bottom_faqs.value %}
{% assign has_bottom_faqs = false %}
{% for bottom_faq in bottom_faqs %}
  {% if bottom_faq %}
    {% assign has_bottom_faqs = true %}
    {% break %}
  {% endif %}
{% endfor %}

{% if has_bottom_faqs and faq_image %}
  <style>
    .standard-product-faq {
      max-width: 1400px;
      margin-left: auto;
      margin-right: auto;
      padding: 32px 16px;
      display: grid;
      grid-template-columns: 1fr ;
      gap: 48px;
    }
    .faq-image {
      width: 100%;
      border-radius: 15px;
      object-fit: cover;
      height:auto;
    }
    .faq-content {
      width: 100%;
    }
    .faq-heading {
      text-align: center;

    }
   .standard-product-faq details {
      border-bottom: 1px solid #d8e1e8;
      padding: 16px 0;
    }
    .standard-product-faq summary {
      cursor: pointer;
      list-style: none;
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-weight: 600;
      font-size: 1.25rem;
      gap: 16px;
    }
    .standard-product-faq summary::-webkit-details-marker {
      display: none;
    }
   .standard-product-faq .icon-chevron {
      width: 20px;
      height: 20px;
      transition: transform 0.3s ease;
      fill: #db2777;
      flex-shrink: 0;
    }
   .standard-product-faq details[open] .icon-chevron {
      transform: rotate(180deg);
    }
    .faq-content-text {
      margin-top: 8px;
      font-size: 0.875rem;
      line-height: 1.4;
    }
    @media (min-width: 768px) {
      .standard-product-faq {
        grid-template-columns: 1fr 1fr;
      }
    }
  </style>

  <div class="standard-product-faq" aria-label="Frequently Asked Questions">
    <div class="faq-image-container">
      <img src="{{ faq_image | image_url }}" alt="FAQ image" width="500" height="500" class="faq-image">
    </div>
    <div class="faq-content">
      <h2 class="faq-heading title-heading-2 ">FAQs</h2>

      {% for bottom_faq in bottom_faqs %}
        <details>
          <summary>
            <span>{{ bottom_faq.title }}</span>
            <svg class="icon-chevron" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M6 8l4 4 4-4" stroke="#ff59e4" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </summary>
          {% assign content = bottom_faq.contents | metafield_tag %}
          <div class="faq-content-text">
            {{ content }}
          </div>
        </details>
      {% endfor %}
    </div>
  </div>

  <div style="border-top:1px solid #000; margin-top: 2rem;"></div>
{% endif %}
