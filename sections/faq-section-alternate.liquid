{% assign section_id = section.id %}
{% assign bg_color = section.settings.bg_color | default: '#ffffff' %}
{% assign has_top_border = section.settings.show_top_border %}
{% assign has_bottom_border = section.settings.show_bottom_border %}

<style>
  .faq-section-{{ section_id }} {
    background-color: {{ bg_color }};
    padding: 4rem 0;
    position: relative;
    {% if has_top_border %}
      border-top: 1px solid {{ section.settings.border_color }};
    {% endif %}
    {% if has_bottom_border %}
      border-bottom: 1px solid {{ section.settings.border_color }};
    {% endif %}
  }

  .faq-container {
    display: flex;
    gap: 32px;
  }

  .faq-content {
    padding: 2rem;
  }

  .faq-image-column {
    width: 50%;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding: 2rem;
    margin-top: 32px;
  }

  .faq-heading {
    text-align: left;
    margin-bottom: 2rem;
  }
  
  .faq-heading h2 {
    font-family: 'Faire Sprig', serif;
    color: #333;
    margin-bottom: 1rem;
  }

  .faq-item {
    margin-bottom: 1rem;
    border-bottom: 1px solid #eee;
  }

  .faq-question {
    padding: 1rem 0;
    font-weight: 600;
    font-family: 'Buenos Aires', sans-serif;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: black;
  }

  .faq-question svg {
    min-width: 17px;
    transition: transform 0.5s ease;
  }
  .faq-question svg path{
    fill:pink;
  }

  .faq-question.active svg {
    transform: rotate(180deg);
  }

  .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
    padding: 0;
    font-family: 'Buenos Aires', sans-serif;
    line-height: 1.6;
  }
  .faq-answer p { margin-top: 0px; }

  .faq-answer.active {
    max-height: 1000px;
    padding-bottom: 1rem;
  }

  @media screen and (max-width: 767px) {
    .faq-container {
      flex-direction: column-reverse;
    }
    .faq-content{
      width: 100%;
      padding: 1.5rem;
    }
  }
</style>

<section class="faq-section-{{ section_id }}">
  <div class="faq-container page-width">
    <div class="faq-content">
      <div class="faq-heading">
        <h2>{{ section.settings.title }}</h2>
      </div>
      {% for block in section.blocks %}
        {% if block.type == 'faq_item' %}
          <div class="faq-item" {{ block.shopify_attributes }}>
            <div class="faq-question" onclick="toggleFAQ(this, '{{ section_id }}-{{ forloop.index }}')">
              {{ block.settings.question }}
               {% render 'icon' with 'plus' %}
            </div>
            <div id="faq-{{ section_id }}-{{ forloop.index }}" class="faq-answer">
              {{ block.settings.answer }}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<script>
  function toggleFAQ(element, id) {
    const answer = document.getElementById('faq-' + id);
    const currentlyActive = element.classList.contains('active');
    
    // Close all FAQs
    const allQuestions = document.querySelectorAll('.faq-question');
    const allAnswers = document.querySelectorAll('.faq-answer');
    
    allQuestions.forEach(q => q.classList.remove('active'));
    allAnswers.forEach(a => a.classList.remove('active'));
    
    // If the clicked question wasn't active before, open it
    if (!currentlyActive) {
      element.classList.add('active');
      answer.classList.add('active');
    }
  }
</script>

{% schema %}
{
  "name": "FAQ Section Style2",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "FAQs"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image (Optional)"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "show_top_border",
      "label": "Show Top Border",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_bottom_border",
      "label": "Show Bottom Border",
      "default": false
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#1A1A1A"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Frequently asked question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>Provide the answer to the question here. This text can include formatting and links.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Section Style 2",
      "category": "Content",
      "blocks": [
        {
          "type": "faq_item",
          "settings": {
            "question": "How do I use Mixhers products?",
            "answer": "<p>Our products are designed to be easy to use. Simply follow the instructions on the product packaging or visit our website for detailed usage guides.</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}
