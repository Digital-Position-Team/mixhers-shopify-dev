{% assign section_id = section.id %}
{% assign bg_color = section.settings.bg_color | default: '#ffffff' %}
{% assign has_top_border = section.settings.show_top_border %}
{% assign has_bottom_border = section.settings.show_bottom_border %}

<style>
  .faq-alt-section-{{ section_id }} {
    background-color: {{ bg_color }};
    padding:60px 0px 50px 0px;
    position: relative;
    {% if has_top_border %}
      border-top: 1px solid {{ section.settings.border_color }};
    {% endif %}
    {% if has_bottom_border %}
      border-bottom: 1px solid {{ section.settings.border_color }};
    {% endif %}
  }
  .faq-alt-container {
    display: flex;
    gap: 32px;
    max-width: 960px;
  }
  .faq-alt-heading {
    margin-bottom: 2rem;
  }
  .faq-alt-heading h2 {
    font-family: 'Faire Sprig', serif;
    text-align: center;
    margin-top: 0px;
  }
  .faq-alt-item {
    margin-bottom: 0px;
    border-bottom: 1px solid #1a1a1a;
  }
  .faq-alt-question {
    font-family: 'Faire Sprig';
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: 400;
    padding: 20px 10px;
    font-size: 20px;
    line-height: 1.1;
  }
  .faq-alt-question svg {
    width: 12px;
    transition: transform 0.5s ease;
  }
  .faq-alt-question svg line{
    stroke:#ff59e4;
    stroke-width: 3px;
  }
  .faq-alt-question.active svg {
    transform: rotate(180deg);
  }
  .faq-alt-answer {
    margin: 0 20px;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease;
    padding: 0;
    font-family: 'Buenos Aires', sans-serif;
    line-height: 1.6;
  }
  .faq-alt-answer p { margin-top: 0px; }

  .faq-alt-answer.active {
    padding-bottom: 10px;
  }
  @media screen and (max-width: 767px) {
    .faq-alt-container {
      flex-direction: column-reverse;
    }
  }
</style>

<div class="faq-alt-section-{{ section_id }} faq-alt-section">
  <div class="faq-alt-container page-width">
    <div class="faq-alt-content">
      <div class="faq-alt-heading">
        <h2>{{ section.settings.title }}</h2>
      </div>
      {% for block in section.blocks %}
        {% if block.type == 'faq_item' %}
          <div class="faq-alt-item" {{ block.shopify_attributes }}>
            <div class="faq-alt-question" onclick="toggleFAQ(this, '{{ section_id }}-{{ forloop.index }}')">
              {{ block.settings.question }}
               {% render 'icon' with 'plus' %}
            </div>
            <div id="faq-alt-{{ section_id }}-{{ forloop.index }}" class="faq-alt-answer">
              {{ block.settings.answer }}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<script>
  function toggleFAQ(element, id) {
    const answer = document.getElementById('faq-alt-' + id);
    const isActive = element.classList.contains('active');

    const allQuestions = document.querySelectorAll('.faq-alt-question');
    const allAnswers = document.querySelectorAll('.faq-alt-answer');

    allQuestions.forEach(q => q.classList.remove('active'));
    allAnswers.forEach(a => {
      a.style.maxHeight = null;
      a.classList.remove('active');
    });

    if (!isActive) {
      element.classList.add('active');
      answer.classList.add('active');
      answer.style.maxHeight = answer.scrollHeight + "px";
    }
  }
</script>


{% schema %}
{
  "name": "FAQ Section Style2",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "FAQs"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "show_top_border",
      "label": "Show Top Border",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_bottom_border",
      "label": "Show Bottom Border",
      "default": false
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#1A1A1A"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Frequently asked question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>Provide the answer to the question here. This text can include formatting and links.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Section Style 2",
      "category": "Content",
      "blocks": [
        {
          "type": "faq_item",
          "settings": {
            "question": "Frequent Asked Question",
            "answer": "<p>Detailed Answer.</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}