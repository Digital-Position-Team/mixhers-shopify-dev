{% schema %}
{
  "name": "About Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image_desktop",
      "label": "Hero Image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "hero_image_mobile",
      "label": "Hero Image (Mobile)"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Hero Text",
      "default": "Hormone-friendly · Highly absorbable · All Natural"
    }
  ],
  "presets": [
    {
      "name": "About Hero"
    }
  ]
}
{% endschema %}

<style>
  @media (max-width: 768px) {
    .hero-image img {
      content: url({{ section.settings.hero_image_mobile | image_url }});
    }
  }
</style>

<div class="relative w-full bg-white m-0 p-0 max-w-none hero-image">
  <!-- Desktop Text -->
  <div class="absolute w-full text-center left-1/2 transform -translate-x-1/2 top-20 md:top-[84px] hidden md:block">
    <h1 class="font-['FAIRE_Sprig'] text-[24px] md:text-[48px] leading-[30px] md:leading-[60px]">
      {{ section.settings.headline }}
    </h1>
  </div>
  <!-- Mobile Text -->
  <div class="absolute w-full text-left left-1/2 transform -translate-x-1/2 top-11 md:hidden">
    {% assign phrases = section.settings.headline | split: '·' %}
    {% for phrase in phrases %}
      <div class="font-['FAIRE_Sprig'] text-[36px] leading-[44px] pl-5">{{ phrase | strip }}</div>
    {% endfor %}
  </div>

  <!-- Images -->
  <img src="{{ section.settings.hero_image_desktop | image_url }}" alt="Hero Desktop" class="w-full h-auto hidden md:block" />
  <img src="{{ section.settings.hero_image_mobile | image_url }}" alt="Hero Mobile" class="w-full h-auto block md:hidden" />
</div>
