{% schema %}
{
  "name": "About Us Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Hero Image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Hero Image (Mobile)"
    },
    {
      "type": "text",
      "id": "heading_desktop",
      "label": "Heading Text (Desktop)",
      "default": "Hormone-friendly · Highly absorbable · All Natural"
    },
    {
      "type": "text",
      "id": "heading_mobile_1",
      "label": "Heading Line 1 (Mobile)",
      "default": "Hormone-friendly"
    },
    {
      "type": "text",
      "id": "heading_mobile_2",
      "label": "Heading Line 2 (Mobile)",
      "default": "Highly absorbable"
    },
    {
      "type": "text",
      "id": "heading_mobile_3",
      "label": "Heading Line 3 (Mobile)",
      "default": "All Natural"
    }
  ],
  "presets": [{"name": "About Us Hero"}]
}
{% endschema %}

<style>
  /* scoped styles for this section */
  .about-us-hero {
    position: relative;
    width: 100%;
    background-color: white;
  }
  .about-us-hero__heading-desktop {
    margin: 0px;
    display: none;
    position: absolute;
    width: 100%;
    text-align: center;
    top: 84px;
    font-weight: 400;
    padding: 0px 10px;
    font-size: 47px;
    font-family: FAIRE Sprig;
    line-height: 1.1;
  }
  .about-us-hero__heading-mobile {
    display: block;
    font-family: 'FAIRE_Sprig', serif;
    font-weight: 400;
    font-size: 44px;
    line-height: 54px;
    padding-left: 1rem;
  }
  @media(max-width:1279px){
    .about-us-hero__heading-desktop{
      font-size:40px;
    }
  }
  @media (min-width: 768px) {
    .about-us-hero__heading-desktop {
      display: block;
    }
    .about-us-hero__heading-mobile {
      display: none;
    }
  }
</style>

<div class="about-us-hero">
  <!-- Desktop Heading -->
  <h1 class="about-us-hero__heading-desktop">
    {{ section.settings.heading_desktop }}
  </h1>

  <!-- Mobile Heading -->
  <div class="about-us-hero__heading-mobile">
    <div>{{ section.settings.heading_mobile_1 }}</div>
    <div>{{ section.settings.heading_mobile_2 }}</div>
    <div>{{ section.settings.heading_mobile_3 }}</div>
  </div>

  <!-- Desktop Image -->
  <img 
    src="{{ section.settings.desktop_image | img_url: '2048x2048' }}" 
    alt="About Us Hero Image" 
    class="desktop-image"
    style="width: 100%; display: none;"
  >
  <!-- Mobile Image -->
  <img 
    src="{{ section.settings.mobile_image | img_url: '1024x1024' }}" 
    alt="About Us Hero Mobile Image" 
    class="mobile-image"
    style="width: 100%; display: block;"
  >

  <script>
    // simple JS to toggle images by window width
    function toggleImages() {
      if(window.innerWidth >= 768){
        document.querySelector('.desktop-image').style.display = 'block';
        document.querySelector('.mobile-image').style.display = 'none';
      } else {
        document.querySelector('.desktop-image').style.display = 'none';
        document.querySelector('.mobile-image').style.display = 'block';
      }
    }
    toggleImages();
    window.addEventListener('resize', toggleImages);
  </script>
</div>
