{% stylesheet %}
  @media (max-width: 768px) {
    .hero-image img {
      content: url('{{ section.settings.image_mobile | img_url: "master" }}');
    }
  }
{% endstylesheet %}

<div class="hero-image relative">
  <img src="{{ section.settings.image_desktop | img_url: 'master' }}" width="100%" height="" alt="{{ section.settings.alt_text }}" class="w-full" />
   <div class="absolute w-full text-center left-1/2 transform -translate-x-1/2 top-20 md:top-[84px] hidden md:block">
        <h1 class="font-['FAIRE_Sprig'] font-normal text-[24px] sm:text-[30px] md:text-[36px] lg:text-[42px] xl:text-[48px] 2xl:text-[54px] leading-[30px] sm:leading-[36px] md:leading-[42px] lg:leading-[48px] xl:leading-[54px] 2xl:leading-[60px]">
          {{ section.settings.text_desktop }}
        </h1>
    </div>
  <div class="md:hidden absolute top-12 left-4 text-left">
    {{ section.settings.text_mobile | newline_to_br }}
  </div>
</div>
{% schema %}
{
  "name": "About Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Hero Image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Hero Image (Mobile)"
    },
    {
      "type": "text",
      "id": "alt_text",
      "label": "Alt text",
      "default": "Hero image"
    },
    {
      "type": "text",
      "id": "text_desktop",
      "label": "Text for Desktop"
    },
    {
      "type": "textarea",
      "id": "text_mobile",
      "label": "Text for Mobile"
    }
  ],
  "presets": [
    {
      "name": "About Hero"
    }
  ]
}
{% endschema %}

