<section class="retailers-section">
  <div class="retailers-title-section">
    <div class="page-width">
      <div class="grid-auto-row">
        <div>
          <h2 class="font-serif underline-title title-heading-2">
            {{ section.settings.retailers_title }}
          </h2>
          <p class="margin-0">
            {{ section.settings.retailers_text }}
          </p>
        </div>
        <div class="retailers--button--wrapper">
          <a href="{{ section.settings.button_link }}" class="custom-primary-btn f-18">
            {{ section.settings.button_text }}
          </a>
        </div>
      </div>
    </div>
  </div>

<div class="credibility-retailers-slider">
  <div class="swiper retailers-swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide retailers--item">
          {% if block.settings.image %}
            <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt | escape }}" loading="lazy">
          {% endif %}
        </div>
      {% endfor %}
      {% for block in section.blocks %}
        <div class="swiper-slide retailers--item">
          {% if block.settings.image %}
            <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt | escape }}" loading="lazy">
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>
</section>

<style>
.retailers-title-section .grid-auto-row {
  display: grid;
  align-items: flex-end;
  gap: 25px;
  grid-template-columns: 1fr;
}
.retailers-title-section {
  padding: 48px 0px;
}
.retailers--button--wrapper {
  padding-bottom: 20px;
}
.retailers--item img {
    height: 160px;
    width: auto;
    object-fit: cover;
    aspect-ratio: 1.3 / 0.8;
    display: block;
}
.credibility-retailers-slider {
  background: #f4f9fd;
  overflow: hidden;
  position: relative;
}

.credibility-retailers-slider {
  background: #f4f9fd;
  overflow: hidden;
  padding: 20px 0;
}

.retailers--item {
  width: auto;
}



.retailers--item img {
  height: 160px;
  object-fit: cover;
  display: block;
  aspect-ratio: 1.3 / 0.8;
}

/* True infinite scroll */
@keyframes scrollRetailers {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-50%);
  }
}

@media(min-width:768px){
  .retailers-title-section .grid-auto-row {
    grid-template-columns: minmax(auto, 1040px) minmax(220px, auto);
    gap: 30px;
  }
}
</style>
<script>
  document.addEventListener('DOMContentLoaded', function () {
  new Swiper('.retailers-swiper', {
    loop: true,
    slidesPerView: 'auto',
    spaceBetween: 20,
    allowTouchMove: false,
    speed: 1000,
    autoplay: {
      delay: 0,
      disableOnInteraction: false
    }
  });
});

</script>

{% schema %}
{
  "name": "Retailers Section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "retailers_title",
      "label": "Section Title",
      "default": "We love our retailers"
    },
    {
      "type": "textarea",
      "id": "retailers_text",
      "label": "Section Description",
      "default": "Mixhers can be found in-store at over 6,000 locations across the United States. Our wholesale partners range from small, local businesses to larger companies like CVS pharmacy."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Find a store near you"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
    }
  ],
  "blocks": [
    {
      "type": "retailer_image",
      "name": "Retailer Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Retailer Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Retailers Section",
      "blocks": [
        { "type": "retailer_image" },
        { "type": "retailer_image" },
        { "type": "retailer_image" },
        { "type": "retailer_image" }
      ]
    }
  ]
}
{% endschema %}
