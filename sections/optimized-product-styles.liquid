<!-- Include Tailwind CSS for optimized product pages -->
<link rel="stylesheet" href="{{ 'tailwind.css' | asset_url }}">

<!-- Additional optimized PDP styles and scripts -->
<style>
  /* Hide elements that should not show on optimized PDPs */
  #hamburger-btn { display: none !important; }
  #attentive_overlay { display: none !important; }
  #shopify-section-rebrand-header #account-icon, 
  #shopify-section-rebrand-header #cart-icon { display: none !important; }
  #rebuy-cart .rebuy-cart__flyout-items a { pointer-events: none; }
  .announcement-bar { display: none; }
  .header-wrapper .header { display: flex; justify-content: center;}
  .header__inline-menu { display: none; }
  .header__icons { display: none; }
  
  /* Optimized product page specific styles */
  html { overflow: auto !important; position: relative !important; inset: auto !important; }
  body { overflow: auto !important; position: relative !important; inset: auto !important; height: auto !important; }
  #shopify-section-rebrand-header nav { min-height: 56px; }
</style>

