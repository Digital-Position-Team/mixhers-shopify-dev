<section class="about-how-its-going" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="section-container">
    <div class="how-its-going-wrapper">
    <div class="how-its-going__image  {% if section.settings.mobile_image %} hide-desktop--image  {% endif %}">
      <img src="{{ section.settings.image | image_url: width: 900 }}" width="" height="" alt="How it started image">
    </div>
    <div class="how-its-going__text">
      <h2 class="how-its-going__title">
        {{ section.settings.title }}
        <div class="highlight-bar"></div>
      </h2>
      <div class="how-its-going__paragraphs">
        {{ section.settings.text }}
      </div>
    </div>
    </div>
  </div>
   {% if section.settings.mobile_image %}
    <img 
      src="{{ section.settings.mobile_image | image_url: width: 800 }}" 
      alt="Mobile image"
      width="" height=""
      class="mobile-only-image"
    />
  {% endif %}
</section>

{% schema %}
{
  "name": "How It's Going",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "How it started"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Paragraph Text",
      "default": "<p>Your paragraph here...</p>"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image (Optional)"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top (px)",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom (px)",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "How It's Going"
    }
  ]
}
{% endschema %}

<style>
  .about-how-its-going *{
    letter-spacing: normal;
  }
  .section-container {
    padding-left:48px;
    padding-right:48px;
    max-width: 1357px;
    margin: 0 auto;
  }
 .how-its-going-wrapper {
    display: grid;
    gap: 40px;
    grid-template-columns: 4fr 6fr;
  }
  .how-its-going__title {
    font-size: 36px;
    font-family: FAIRE Sprig;
    line-height: 42px;
    margin: 0px;
    position: relative;
    margin:0px 0 10px 0;
    display: inline-block;
  }
  .highlight-bar {
    position: absolute;
    bottom: -5px;
    display: inline-block !important;
    left: 0;
    height: 18px;
    width: 100%;
    background-color: #ff59e48a;
    z-index: -1;
  }
  .how-its-going__paragraphs p {
    font-family: Buenos Aires, sans-serif;
    font-size: 20px;
    color: #1a1a1a;
    line-height: 1.2;
    margin-bottom: 1rem
  }
  .how-its-going__image img {
    width: 100%;
    max-width:500px;
    display:block;
  }
  .mobile-only-image{
    display:none;
  }
  @media(max-width:1023px){
   .about-how-its-going .section-container{
      padding-left:32px;
      padding-right:32px;
    }
  }
  @media (max-width: 767px) {
    .about-how-its-going .section-container{
      padding-left:20px;
      padding-right:20px;
    }
    .how-its-going-wrapper{ 
      grid-template-columns: 1fr;
      gap:25px;
    }
    .about-how-its-going p {
      font-size: 16px;
      line-height: 1.25;
    }
    .how-its-going__image{
      order: 2;
    }
    .how-its-going__image img{
      margin:0 auto
    }
    .hide-desktop--image{
      display:none;
    }
    .mobile-only-image{
      display:block;
      width:100%;
    }
  }

</style>

