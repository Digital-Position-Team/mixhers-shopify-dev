<style>
  .dp-hero {
    display: flex;
    align-items: center;
    padding: 40px;
    font-family: 'Buenos Aires', sans-serif;
  }
  .dp-hero__left, .dp-hero__right {
    width: 50%;
  }
  .dp-hero__left {
    padding-right: 20px;
  }
  .dp-hero__title {
    font-family: 'Faire Sprig', serif;
    font-size: {{ section.settings.title_size }}px;
    margin-bottom: 10px;
  }
  .dp-hero__subtitle {
    font-size: {{ section.settings.subtitle_size }}px;
    margin-bottom: 20px;
  }
  .dp-hero__cta-primary,
  .dp-hero__cta-secondary {
    display: inline-block;
    padding: 10px 20px;
    text-decoration: none;
    margin-right: 10px;
    margin-bottom: 20px;
    border: 1px solid #000;
  }
  .dp-hero__cta-primary {
    background-color: #000;
    color: #fff;
  }
  .dp-hero__cta-secondary {
    background-color: #fff;
    color: #000;
  }
  .dp-hero__reviews {
    font-size: {{ section.settings.reviews_size }}px;
  }
  .dp-hero__image-container {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 100%; /* Aspect ratio 1:1, adjust as needed */
    overflow: hidden;
  }
  .dp-hero__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 1s ease-in-out;
  }
  .dp-hero__image.active {
    opacity: 1;
  }
</style>

<div class="dp-hero">
  <div class="dp-hero__left">
    <h1 class="dp-hero__title">{{ section.settings.title }}</h1>
    <p class="dp-hero__subtitle">{{ section.settings.subtitle }}</p>
    <a href="{{ section.settings.primary_cta_link }}" class="dp-hero__cta-primary">{{ section.settings.primary_cta_text }}</a>
    <a href="{{ section.settings.secondary_cta_link }}" class="dp-hero__cta-secondary">{{ section.settings.secondary_cta_text }}</a>
    <p class="dp-hero__reviews">{{ section.settings.reviews_text }}</p>
  </div>
  <div class="dp-hero__right">
    <div class="dp-hero__image-container">
      {% for block in section.blocks %}
        <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt | escape }}" class="dp-hero__image {% if forloop.first %}active{% endif %}" loading="lazy">
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const images = document.querySelectorAll('.dp-hero__image');
    let currentIndex = 0;
    const scrollInterval = {{ section.settings.scroll_interval }} * 1000;

    function showNextImage() {
      images[currentIndex].classList.remove('active');
      currentIndex = (currentIndex + 1) % images.length;
      images[currentIndex].classList.add('active');
    }

    if (images.length > 1) {
      setInterval(showNextImage, scrollInterval);
    }
  });
</script>

{% schema %}
{
  "name": "DP Hero",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Her health starts with hormones."
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 20,
      "max": 60,
      "step": 1,
      "unit": "px",
      "label": "Title Font Size",
      "default": 40
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Science-backed supplements you sip for balanced hormones and a better you"
    },
    {
      "type": "range",
      "id": "subtitle_size",
      "min": 12,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Subtitle Font Size",
      "default": 18
    },
    {
      "type": "text",
      "id": "primary_cta_text",
      "label": "Primary CTA Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "primary_cta_link",
      "label": "Primary CTA Link"
    },
    {
      "type": "text",
      "id": "secondary_cta_text",
      "label": "Secondary CTA Text",
      "default": "Take the Quiz"
    },
    {
      "type": "url",
      "id": "secondary_cta_link",
      "label": "Secondary CTA Link"
    },
    {
      "type": "text",
      "id": "reviews_text",
      "label": "Reviews Text",
      "default": "★ ★ ★ ★ ★ Over 17,000 5-star reviews from real women"
    },
    {
      "type": "range",
      "id": "reviews_size",
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Reviews Text Font Size",
      "default": 14
    },
    {
      "type": "number",
      "id": "scroll_interval",
      "label": "Image Scroll Interval (seconds)",
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "DP Hero",
      "blocks": [
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}
