<section class="mission-section">
  <div class="section-container">
    <h2 class="mission-heading">
      {{ section.settings.heading }}
    </h2>
    <div class="mission-wrapper">
      <div class="mission-text">
        <p>{{ section.settings.text }}</p>
      </div>
      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="mission-button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .mission-section {
    padding: 40px 23px;
    background-color: #F4F5FD;
    border-top: 1px solid #000;
  }
  .mission-section *{
    letter-spacing: normal;
  }
  .section-container {
    max-width: 1357px;
    margin: 0 auto;
    padding-left: 48px;
    padding-right: 48px;
  }
  .mission-heading {
    font-family: FAIRE Sprig;
    font-size: 28px;
    line-height: 32px;
    margin: 0 0 0px 0;
    font-weight:500;
  }
  .mission-wrapper {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 20px;
    align-items: center;
    margin-top:15px;
  }
  .mission-text p {
    font-family: Buenos Aires, sans-serif;
    font-size: 20px;
    line-height: 1.2;
    color: #000;
    margin: 0;
    max-width: 922px;
  }
 .mission-button {
    display: inline-flex;
    align-items: center;
    letter-spacing: normal;
    justify-content: center;
    padding: 11px 18px;
    line-height: 1.2;
    background: #1A1A1A;
    border-radius: 64px;
    color: #fff;
    font-weight: 600;
    min-width: 180px;
    text-decoration: none;
    font-size: 18px;
    font-family: Buenos Aires;
    transition: all 0.3s ease-in-out;
    text-align: center;
}
  .mission-button:hover {
    background-color: #000;
    box-shadow: 0 2px 8px rgb(0 0 0 / 21%);
  }
  @media (max-width: 767px) {
    .mission-section{
      padding:40px 10px;
    }
    .section-container {
      padding-left: 20px;
      padding-right: 20px;
    }
    .mission-wrapper {
      grid-template-columns: 1fr;
      gap: 16px;
    }
    .mission-button {
      width: 100%;
      max-width: 180px;
    }
  }
</style>

{% schema %}
{
  "name": "Mission Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "We're on a mission"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Mixhers provides hormone-friendly, science-backed supplements to fuel female evolution through every stage of womanhood. We boldly advocate for the voices, experiences, and health of women."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Mission Section"
    }
  ]
}
{% endschema %}
