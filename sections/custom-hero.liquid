<style>
  .hero {
    display: flex;
    align-items: center;
    font-family: 'Buenos Aires', sans-serif;
    background-color: #ffaeff;
    background-image: url('{{ "hero-bg.svg" | file_url: 'large' }}');
    background-position: 0% 100%;
    background-size: 50%;
    background-repeat: no-repeat;
  }
  .hero__left, .hero__right {
    width: 50%;
  }
  .hero__left {
    padding: 60px;
    color: white;
    height: 650px;
    
  }
  .hero__left-inner {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    max-width: 624px;
  }
  .hero__title {
    font-family: 'Faire Sprig', serif;
    font-size: {{ section.settings.title_size }}px;
    margin-bottom: 20px;
    margin-top: 0;
    color: white;
    line-height: 62px;
  }
  .hero__subtitle {
    font-size: {{ section.settings.subtitle_size }}px;
    margin-bottom: 30px;
    color: white;
    line-height: 30px;
  }
  .hero__reviews {
    font-size: {{ section.settings.reviews_size }}px;
    color: white;
    margin-top: 30px;
    margin-bottom: 4px;
  }
  .hero__image-container {
    position: relative;
    width: 100%;
    height: 650px;
    overflow: hidden;
  }
  .hero__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 1s ease-in-out;
  }
  .hero__image.active {
    opacity: 1;
  }
  .hero__image-link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 1s ease-in-out;
    display: block;
    cursor: pointer;
  }
  .hero__image-link.active {
    opacity: 1;
    z-index: 1;
  }
  
  @media screen and (max-width: 990px) {
    .hero {
      flex-direction: column;
    }
    .hero__left, .hero__right {
      width: 100%;
    }
    .hero__left {
      padding: 40px 20px;
      order: 2;
    }
    .hero__right {
      order: 1;
    }
    .hero__image-container {
      height: 400px;
    }
  }
</style>

<div class="hero">
  <div class="hero__left">
    <div class="hero__left-inner">
      
      <p class="hero__reviews">{{ section.settings.reviews_text }}</p>
      <h1 class="hero__title">{{ section.settings.title }}</h1>
      <p class="hero__subtitle">{{ section.settings.subtitle }}</p>
      <div class="hero__cta-container">
        <a href="{{ section.settings.primary_cta_link }}" class="btn btn-primary">{{ section.settings.primary_cta_text }}</a>
        <a href="{{ section.settings.secondary_cta_link }}" class="btn btn-secondary">{{ section.settings.secondary_cta_text }}</a>
      </div>
    </div>
  </div>
  <div class="hero__right">
    <div class="hero__image-container">
      {% for block in section.blocks %}
        {% if block.settings.image_link != blank %}
          <a href="{{ block.settings.image_link }}" class="hero__image-link {% if forloop.first %}active{% endif %}">
            <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt | escape }}" class="hero__image {% if forloop.first %}active{% endif %}" loading="lazy">
          </a>
        {% else %}
          <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt | escape }}" class="hero__image {% if forloop.first %}active{% endif %}" loading="lazy">
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const images = document.querySelectorAll('.hero__image');
    const links = document.querySelectorAll('.hero__image-link');
    let currentIndex = 0;
    const scrollInterval = {{ section.settings.scroll_interval }} * 1000;

    function showNextImage() {
      // Remove active class from current image
      if (images[currentIndex]) {
        images[currentIndex].classList.remove('active');
      }
      
      // Remove active class from current link if it exists
      if (links[currentIndex]) {
        links[currentIndex].classList.remove('active');
      }
      
      // Update index
      currentIndex = (currentIndex + 1) % Math.max(images.length, links.length);
      
      // Add active class to next image
      if (images[currentIndex]) {
        images[currentIndex].classList.add('active');
      }
      
      // Add active class to next link if it exists
      if (links[currentIndex]) {
        links[currentIndex].classList.add('active');
      }
    }

    if (Math.max(images.length, links.length) > 1) {
      setInterval(showNextImage, scrollInterval);
    }
  });
</script>

{% schema %}
{
  "name": "Custom Hero",
  "settings": [
    {
      "type": "text",
      "id": "reviews_text",
      "label": "Reviews Text",
      "default": "★ ★ ★ ★ ★ Over 17,000 5-star reviews from real women"
    },
    {
      "type": "range",
      "id": "reviews_size",
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Reviews Text Font Size",
      "default": 14
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Her health starts with hormones."
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 20,
      "max": 60,
      "step": 1,
      "unit": "px",
      "label": "Title Font Size",
      "default": 40
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Science-backed supplements you sip for balanced hormones and a better you"
    },
    {
      "type": "range",
      "id": "subtitle_size",
      "min": 12,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Subtitle Font Size",
      "default": 18
    },
    {
      "type": "text",
      "id": "primary_cta_text",
      "label": "Primary CTA Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "primary_cta_link",
      "label": "Primary CTA Link"
    },
    {
      "type": "text",
      "id": "secondary_cta_text",
      "label": "Secondary CTA Text",
      "default": "Take the Quiz"
    },
    {
      "type": "url",
      "id": "secondary_cta_link",
      "label": "Secondary CTA Link"
    },
    {
      "type": "number",
      "id": "scroll_interval",
      "label": "Image Scroll Interval (seconds)",
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "image_link",
          "label": "Image Link",
          "info": "Optional. Makes the image clickable."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Hero",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}
