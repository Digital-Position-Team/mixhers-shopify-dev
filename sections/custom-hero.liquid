<style>
  .hero {
    display: flex;
    align-items: center;
    font-family: 'Buenos Aires', sans-serif;
    background-color: #000;
  }
  .hero__left, .hero__right {
    width: 50%;
  }
  .hero__left {
    padding: 60px;
    color: white;
  }
  .hero__title {
    font-family: 'Faire Sprig', serif;
    font-size: {{ section.settings.title_size }}px;
    margin-bottom: 20px;
    color: white;
  }
  .hero__subtitle {
    font-size: {{ section.settings.subtitle_size }}px;
    margin-bottom: 30px;
    color: white;
  }
  .hero__reviews {
    font-size: {{ section.settings.reviews_size }}px;
    color: white;
    margin-top: 30px;
  }
  .hero__image-container {
    position: relative;
    width: 100%;
    height: 600px;
    overflow: hidden;
  }
  .hero__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 1s ease-in-out;
  }
  .hero__image.active {
    opacity: 1;
  }
  
  @media screen and (max-width: 990px) {
    .hero {
      flex-direction: column;
    }
    .hero__left, .hero__right {
      width: 100%;
    }
    .hero__left {
      padding: 40px 20px;
      order: 2;
    }
    .hero__right {
      order: 1;
    }
    .hero__image-container {
      height: 400px;
    }
  }
</style>
</style>

<div class="hero">
  <div class="hero__left">
    <p class="hero__reviews">{{ section.settings.reviews_text }}</p>
    <h1 class="hero__title">{{ section.settings.title }}</h1>
    <p class="hero__subtitle">{{ section.settings.subtitle }}</p>
    <div class="hero__cta-container">
      <a href="{{ section.settings.primary_cta_link }}" class="btn btn-primary">{{ section.settings.primary_cta_text }}</a>
      <a href="{{ section.settings.secondary_cta_link }}" class="btn btn-secondary">{{ section.settings.secondary_cta_text }}</a>
    </div>
  </div>
  <div class="hero__right">
    <div class="hero__image-container">
      {% for block in section.blocks %}
        <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt | escape }}" class="hero__image {% if forloop.first %}active{% endif %}" loading="lazy">
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const images = document.querySelectorAll('.hero__image');
    let currentIndex = 0;
    const scrollInterval = {{ section.settings.scroll_interval }} * 1000;

    function showNextImage() {
      images[currentIndex].classList.remove('active');
      currentIndex = (currentIndex + 1) % images.length;
      images[currentIndex].classList.add('active');
    }

    if (images.length > 1) {
      setInterval(showNextImage, scrollInterval);
    }
  });
</script>

{% schema %}
{
  "name": "Custom Hero",
  "settings": [
    {
      "type": "text",
      "id": "reviews_text",
      "label": "Reviews Text",
      "default": "★ ★ ★ ★ ★ Over 17,000 5-star reviews from real women"
    },
    {
      "type": "range",
      "id": "reviews_size",
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Reviews Text Font Size",
      "default": 14
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Her health starts with hormones."
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 20,
      "max": 60,
      "step": 1,
      "unit": "px",
      "label": "Title Font Size",
      "default": 40
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Science-backed supplements you sip for balanced hormones and a better you"
    },
    {
      "type": "range",
      "id": "subtitle_size",
      "min": 12,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Subtitle Font Size",
      "default": 18
    },
    {
      "type": "text",
      "id": "primary_cta_text",
      "label": "Primary CTA Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "primary_cta_link",
      "label": "Primary CTA Link"
    },
    {
      "type": "text",
      "id": "secondary_cta_text",
      "label": "Secondary CTA Text",
      "default": "Take the Quiz"
    },
    {
      "type": "url",
      "id": "secondary_cta_link",
      "label": "Secondary CTA Link"
    },
    {
      "type": "number",
      "id": "scroll_interval",
      "label": "Image Scroll Interval (seconds)",
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Hero",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}
