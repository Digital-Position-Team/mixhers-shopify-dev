{% schema %}
{
  "name": "Ingredients List Section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "INGREDIENTS THAT WORK"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Thoughtfully dosed, naturally effective"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop MixHers Products"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Featured Product Image"
    },
    {
      "type": "text",
      "id": "product_title",
      "label": "Featured Product Title",
      "default": "Product Name"
    },
    {
      "type": "url",
      "id": "product_link",
      "label": "Featured Product Link"
    },
    {
      "type": "image_picker",
      "id": "bottom_image",
      "label": "Bottom Image"
    }
  ],
  "blocks": [
    {
      "type": "ingredient",
      "name": "Ingredient",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Ingredient Name",
          "default": "Ingredient Name"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Ingredient Info",
          "default": "Ingredient Info"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Ingredient Icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ingredients List Section",
      "blocks": [
        { "type": "ingredient" },
        { "type": "ingredient" },
        { "type": "ingredient" }
      ]
    }
  ]
}
{% endschema %}

<div class="ingredients-list-section">
  <div class="ingredients-section-row">
    <div class="ingredients-info">
      <div class="info-top">
        <div class="page-width">
          <div class="info-content">
            <div class="text-content">
              <h1 class="font-serif">{{ section.settings.heading }}</h1>
              <p>{{ section.settings.subheading }}</p>
              {% if section.settings.button_link != blank %}
                <a href="{{ section.settings.button_link }}" class="btn btn-black">
                  {{ section.settings.button_label }}
                </a>
              {% endif %}
            </div>
            
            {% if section.settings.product_image %}
              <div class="product-feature">
                {% if section.settings.product_link != blank %}
                  <a href="{{ section.settings.product_link }}" class="product-link">
                {% endif %}
                  <img src="{{ section.settings.product_image | image_url }}" alt="{{ section.settings.product_title }}" class="product-image" />
                  {% if section.settings.product_title != blank %}
                    <div class="product-title">{{ section.settings.product_title }}</div>
                  {% endif %}
                {% if section.settings.product_link != blank %}
                  </a>
                {% endif %}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
      {% if section.settings.bottom_image %}
        <div class="image-bottom">
          <img src="{{ section.settings.bottom_image | image_url }}" alt="Ingredients Image" height="" width=""/>
        </div>
      {% endif %}
    </div>

    <div class="ingredients-list">
      <h3 class="font-serif">Ingredients</h3>
      <div class="ingredients-blocks">
        {% for block in section.blocks %}
          <div class="ingredient-item" data-accordion>
            <div class="ingredient-title" data-accordion-toggle>
              <div class="ingredient-header">
                <div class="ingredient-icon">
                  {% if block.settings.icon %}
                    <img src="{{ block.settings.icon | image_url }}" alt="{{ block.settings.title }} icon" width="24" height="24">
                  {% else %}
                    <img src="{{ 'white-peony-root.png' | asset_url }}" alt="Default ingredient icon" width="24" height="24">
                  {% endif %}
                </div>
                <strong>{{ block.settings.title }}</strong>
              </div>
              <span class="chevron">+</span>
            </div>
            <div class="ingredient-description">
              <p>{{ block.settings.description }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
     
    </div>
  </div>
</div>

<style>
  h3.font-serif {
    font-family: 'Faire Sprig';
    font-weight: 400;
    font-size: 22.06px;
    line-height: 22.77px;
    letter-spacing: 0px;
    vertical-align: middle;
    text-transform: uppercase;
}
.ingredient-title strong {
    font-family: 'Buenos Aires', sans-serif;
    font-weight: 600;
    font-size: 18px;
    line-height: 20.87px;
    letter-spacing: 0px;
    vertical-align: middle;
}
.info-top {
  padding:80px 0px 65px 0px;
  margin: 0 auto;
}
.image-bottom {
    flex-grow: 1;
}
.info-top * {
  margin: 0px;
}
.info-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 30px;
}
.text-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 22px;
}
.product-feature {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.product-image {
  max-width: 200px;
  height: auto;
}
.product-title {
  margin-top: 10px;
  font-weight: 600;
  text-align: center;
}
.open-acc-item{
  display:flex;
  justify-content:space-between;
  align-items:center;
}
.ingredients-list-section {
    background: #F4F9FD;
    border-top: 1px solid #000;
    border-bottom: 1px solid #000;
}
.image-bottom {
    min-height: 360px;
    position: relative;
    border-top: 1px solid #000;
}
.image-bottom img{
    width: 100%;
    object-fit: cover;
    position: absolute;
    left: 0;
    right: 0;
    height: 100%;
    bottom: 0;
    top: 0;
}
.ingredients-list {
    width: 50%;
    padding: 28px;
}
.ingredients-section-row {
  display: flex;
  flex-wrap: wrap;
}
.ingredients-info {
    width: 50%;
    border-right: 1px solid #000;
      display: flex;
    flex-direction: column;
}
.ingredient-item {
  border-bottom: 0.95px solid #E1E1E1;
  padding: 14px 0;
  cursor: pointer;
}
.ingredient-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.ingredient-header {
  display: flex;
  align-items: center;
  gap: 10px;
}
.ingredient-icon {
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.ingredient-icon img {
  width: 100%;
  height: auto;
  object-fit: contain;
}
.ingredient-description {
  margin-top: 0;
  padding-left: 34px;
  max-height: 0;
  overflow: hidden;
  opacity: 0;
  transition: max-height 0.25s ease-out, opacity 0.25s ease-out, margin-top 0.25s ease-out;
}
.ingredient-item.open .ingredient-description {
  margin-top: 10px;
  max-height: 1000px;
  opacity: 1;
  transition: max-height 0.35s ease-in, opacity 0.25s ease-in, margin-top 0.25s ease-in;
}
.chevron {
  font-size: 18px;
  transition: transform 0.25s ease-out;
}
.ingredient-item.open .chevron {
  transform: rotate(45deg);
}
.toggle-icon {
  transition: transform 0.3s ease;
  cursor: pointer;
}
.toggle-icon.open {
  transform: rotate(180deg);
}
.ingredients-blocks.collapsed {
  display: none;
}
@media screen and (max-width: 991px) {
    .info-top{
    margin:0px auto;
  }
}
 @media (min-width: 768px) and (max-width:991px) {
   .ingredients-list-section .info-top .page-width{
      padding-left: 30px;
      padding-right: 30px;
  }
}
@media screen and (max-width: 767px) {
  .ingredients-section-row .ingredients-info {
      width: 100%;
      border-right: unset;
      text-align: center;
  }
  .ingredients-section-row {
    flex-direction: column;
  }
  .ingredients-section-row .ingredients-list{
    width: 100%;
  }
  .info-content {
    flex-direction: column;
    align-items: center;
  }
  .info-top p{
    text-align: center;
    width: 100%;
  }
  .info-top{
    margin:0px auto;
  }
  .info-top .btn {
    margin: 0px auto;
    width: auto;
  }
  .text-content {
    align-items: center;
  }
  .info-top h1.font-serif:before {
    position: absolute;
    content: '';
    height: 4px;
    background: #000;
    width: 64px;
    left: 0;
    right: 0;
    margin: 0 auto;
    bottom: 0%;
  }
  .info-top h1.font-serif {
    padding-bottom: 34px;
    position: relative;
    width:100%;
  }
  .info-top {
    padding:50px 0px 55px 0px;
  }
}


  
</style>

<script>
// Ingredients block is always visible - no toggle needed
            
document.addEventListener('DOMContentLoaded', function () {
  const items = document.querySelectorAll('[data-accordion]');

  items.forEach(item => {
    const toggle = item.querySelector('[data-accordion-toggle]');
    
    toggle.addEventListener('click', () => {
      const isOpen = item.classList.contains('open');
      
      // Close all ingredients
      items.forEach(i => {
        i.classList.remove('open');
        i.querySelector('.chevron').textContent = '+';
      });

      // If the clicked item wasn't open before, open it
      if (!isOpen) {
        item.classList.add('open');
        item.querySelector('.chevron').textContent = '+';
      }
    });
  });
});
</script>
