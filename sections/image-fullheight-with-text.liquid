{% schema %}
{
  "name": "Floating Image with text",
  "tag":"section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image (Desktop)"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        {
          "label": "Left Side",
          "value": "left"
        },
        {
          "label": "Right Side",
          "value": "right"
        }
      ]
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text (Desktop)",
      "default": "What makes our formulas actually work?"
    },
    {
      "type":"color",
      "id":"heading_color",
      "label":"Heading color",
      "default":"#FF59E4"
    },
     {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default":"<p>MixHers is hormonal health and wellness made simple.</p>"
    },
      {
      "type": "checkbox",
      "id": "border_bottom",
      "label": "Show bottom border",
      "default":true
    },
  ],
  "presets": [{"name": "Floating Image with text"}]
}
{% endschema %}

<div class="image-with-content {% if section.settings.border_bottom %} show-border-bottom{% endif %}">
  <div class="image-with-content-row">
    <div class="content-div content-{{ section.settings.image_position }}">
       <div class="page-width">
      <div class="content-div-inner">
        <h2 class="heading-text font-serif">{{ section.settings.heading }}</h2>
        <div class="">
          {{ section.settings.content }}
        </div>
      </div>
    </div>
      </div>
    <div class="image-div image-{{ section.settings.image_position }}">
     <img src={{ section.settings.image | image_url: width:1000 }} alt="Image" width="" height=""/>
    </div>
 </div>
</div>

<style>
  .image-with-content.show-border-bottom{
    border-bottom:1px solid #000;
  }
  .image-with-content-row .heading-text {
    color: {{ section.settings.heading_color }};
  }
  .image-with-content-row{
    display:grid;
    grid-template-columns:1fr 1fr;
    align-items: center;
  }
  .image-with-content-row .image-div img{
    display:block;
    height:100%;
    width:100%;
  }
  .image-div.image-left{
    order:1;
  }
  .content-div.content-left{
    order:2;
  }
  @media screen and (max-width: 767px) {
    .image-with-content-row{
      display: flex;
    flex-direction: column-reverse;
    }
    .features--row {
    max-width: 100%;
    flex-direction: column;
    padding: 40px 30px;
}
    .content-div.content-right.page-width{
      padding: 0 1.5rem;
    }
  }

@media screen and (max-width:991px) {
  .image-div.image-right {
    width: 100%;
}
}
</style>