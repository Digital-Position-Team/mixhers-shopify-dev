{% schema %}
{
  "name": "Floating Image with text",
  "tag":"section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image (Desktop)"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        {
          "label": "Left Side",
          "value": "left"
        },
        {
          "label": "Right Side",
          "value": "right"
        }
      ]
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text (Desktop)",
      "default": "What makes our formulas actually work?"
    },
    {
      "type":"color",
      "id":"heading_color",
      "label":"Heading color",
      "default":"#FF59E4"
    },
     {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default":"<p>MixHers is hormonal health and wellness made simple.</p>"
    },
  ],
  "presets": [{"name": "Floating Image with text"}]
}
{% endschema %}

<div class="image-with-content">
 
    <div class="image-with-content-row" style="flex-direction:">
    <div class="content-div">
       <div class="page-width">
      <div class="content-div-inner">
        <h3 class="heading-text font-serif">{{ section.settings.heading }}</h3>
        <div class="">
          {{ section.settings.content }}
        </div>
      </div>
    </div>
      </div>
    <div class="image-div image-{{ section.settings.image_position }}">
     <img src={{ section.settings.image | image_url: width:1000 }} alt="Image" width="" height=""/>
    </div>
  
 </div>
</div>

<style>
  .image-with-content-row .heading-text {
    color: {{ section.settings.heading_color }};
  }
  .image-with-content-row{
    display:grid;
    grid-template-columns:1fr 1fr;
    align-items: center;
  }
  .image-with-content-row .image-div img{
    display:block;
    height:100%;
    width:100%;
  }
  .image-div.image-left{
    order:1;
  }
</style>