{% schema %}
{
  "name": "Floating Image with text",
  "tag":"section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image (Desktop)"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        {
          "label": "Left Side",
          "value": "left"
        },
        {
          "label": "Right Side",
          "value": "right"
        }
      ]
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text (Desktop)",
      "default": "What makes our formulas actually work?"
    },
     {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default":"<p>MixHers is hormonal health and wellness made simple.</p>"
    },
  ],
  "presets": [{"name": "Floating Image with text"}]
}
{% endschema %}

<div class="image-with-content">
  <div class="page-width">
    <div class="image-with-content-row">
    <div class="content-div">
      <div class="content-div-inner">
        <h3 class="">{{ section.settings.heading }}</h3>
        <div class="">
          {{ section.settings.content }}
        </div>
      </div>
    </div>
    <div class="image-div">
     <img src={{ section.settings.image | image_url: width:1000 }} alt="Image" width="" height=""/>
    </div>
  </div>
 </div>
</div>