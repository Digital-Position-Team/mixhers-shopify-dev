{% schema %}
{
  "name": "Clinical Studies Section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "MixHers is clinically studied"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Crafted for balance, rooted in research, trusted by women."
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop MixHers Products"
    }
  ],
  "blocks": [
    {
  "type": "clinical_st",
  "name": "Clinical Study",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Clinical Study Name",
      "default": "Clinical Study Name"
    },
    {
      "type": "text",
      "id": "entry_heading_1",
      "label": "Entry Heading 1"
    },
    {
      "type": "textarea",
      "id": "entry_text_1",
      "label": "Entry Text 1"
    },
    {
      "type": "url",
      "id": "entry_link_1",
      "label": "Entry Link 1"
    },
    {
      "type": "text",
      "id": "entry_heading_2",
      "label": "Entry Heading 2"
    },
    {
      "type": "textarea",
      "id": "entry_text_2",
      "label": "Entry Text 2"
    },
    {
      "type": "url",
      "id": "entry_link_2",
      "label": "Entry Link 2"
    },
    {
      "type": "text",
      "id": "entry_heading_3",
      "label": "Entry Heading 3"
    },
    {
      "type": "textarea",
      "id": "entry_text_3",
      "label": "Entry Text 3"
    },
    {
      "type": "url",
      "id": "entry_link_3",
      "label": "Entry Link 3"
    }
  ]
}

  ],
  "presets": [
    {
      "name": "Clinical Studies Section"
    }
  ]
}
{% endschema %}

<div class="clinical_sts-list-section_clinic">
  <div class="clinical_sts-section-row_clinic">
    <div class="clinical_study-info_clinic">
      <div class="info-top_clinic">
        <div class="page-width">
          <h1 class="font-serif">{{ section.settings.heading }}</h1>
          <p>{{ section.settings.subheading }}</p>
          {% if section.settings.button_link != blank %}
            <a href="{{ section.settings.button_link }}" class="btn btn-black">
              {{ section.settings.button_label }}
            </a>
          {% endif %}
        </div>
      </div>
      {% if section.settings.bottom_image %}
        <div class="image-bottom_clinic">
          <img src="{{ section.settings.bottom_image | image_url }}" alt="Ingredients Image" height="" width=""/>
        </div>
      {% endif %}
    </div>

    <div class="clinical_studies-list_clinic">
      <div class="open-acc-item_clinic" id="clinical_study-toggle_clinic">
        <h3 class="font-serif">Clinical Studies</h3>
        <svg class="toggle-icon_clinic" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="6 9 12 15 18 9" />
        </svg>
      </div>

      <div class="clinical_study-blocks_clinic">
        {% for block in section.blocks %}
          <div class="clinical_st-item_clinic" data-accordion_clinic>
            <div class="clinical_st-title_clinic" data-accordion-toggle_clinic>
              <strong>{{ block.settings.title }}</strong>
              <span class="chevron_clinic">+</span>
            </div>
            <div class="clinical_st-description_clinic" style="display: none;">
              {% for i in (1..3) %}
                {% capture heading_key %}entry_heading_{{ i }}{% endcapture %}
                {% capture text_key %}entry_text_{{ i }}{% endcapture %}
                {% capture link_key %}entry_link_{{ i }}{% endcapture %}
                
                {% assign heading = block.settings[heading_key] %}
                {% assign text = block.settings[text_key] %}
                {% assign link = block.settings[link_key] %}
                
                {% if heading != blank or text != blank or link != blank %}
                  <div class="journal-entry_clinic">
                    {% if heading != blank %}
                      <div class="entry-heading_clinic">
                        <svg class="entry-icon_clinic" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                          <path d="M4 4h16v16H4z"/>
                          <path d="M4 8h16M8 4v16" />
                        </svg>
                        <strong>{{ heading }}</strong>
                      </div>
                    {% endif %}
                    {% if text != blank %}
                      <p>{{ text }}</p>
                    {% endif %}
                    {% if link != blank %}
                      <a class="read-article-btn_clinic" href="{{ link }}" target="_blank">Read Journal Article â†’</a>
                    {% endif %}
                  </div>
                {% endif %}
                {% endfor %}
            </div>
          </div>
        {% endfor %}
      </div>     
    </div>
  </div>
</div>

<style>
.info-top_clinic {
  padding:80px 0px 60px 0px;
  max-width: 600px;
  height: 100%;
}
.image-bottom_clinic {
    flex-grow: 1;
}
.info-top_clinic * {
  margin: 0px;
}
.info-top_clinic .page-width {
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items: flex-start;
  gap: 22px;
  height:100%;
}
.open-acc-item_clinic {
  display:flex;
  justify-content:space-between;
  align-items:center;
}
.clinical_sts-list-section_clinic {
    background: transparent;
    border-top: 1px solid #000;
    border-bottom: 1px solid #000;
}
.image-bottom_clinic img {
    width: 100%;
    object-fit: cover;
    position: absolute;
    left: 0;
    right: 0;
    height: 100%;
    bottom: 0;
    top: 0;
}
.clinical_studies-list_clinic {
    width: 50%;
    padding: 28px;
}
.clinical_sts-section-row_clinic {
  display: flex;
  flex-wrap: wrap;
}
.clinical_study-info_clinic {
    width: 50%;
    display: flex;
    flex-direction: column;
}
.clinical_st-item_clinic {
  border-bottom: 1px solid #ccc;
  padding: 15px 0;
  cursor: pointer;
}
.clinical_st-title_clinic {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.clinical_st-description_clinic {
  margin-top: 10px;
}
.chevron_clinic {
  font-size: 18px;
  transition: transform 0.2s ease;
}
.clinical_st-item_clinic.open_clinic .chevron_clinic {
  transform: rotate(45deg);
}
.toggle-icon_clinic {
  transition: transform 0.3s ease;
  cursor: pointer;
}
.toggle-icon_clinic.open_clinic {
  transform: rotate(180deg);
}
.clinical_study-blocks_clinic.collapsed_clinic {
  display: none;
}
  .journal-entry_clinic {
  margin-bottom: 20px;
}
.entry-heading_clinic {
  display: flex;
  align-items: center;
  gap: 8px;
  font-weight: bold;
  margin-bottom: 6px;
}
.entry-icon_clinic {
  width: 16px;
  height: 16px;
  stroke: #000;
}
.read-article-btn_clinic {
  color: #000;
  text-decoration: underline;
  font-weight: 500;
  display: inline-block;
  margin-top: 4px;
}

@media screen and (max-width: 768px) {
  .clinical_sts-section-row_clinic .clinical_study-info_clinic {
    width: 100%;
    border-right: unset;
    text-align: center;
  }
  .clinical_sts-section-row_clinic {
    flex-direction: column;
  }
  .clinical_sts-section-row_clinic .clinical_studies-list_clinic {
    width: 100%;
  }
  .info-top_clinic p {
    text-align: center;
    width: 100%;
  }
  .info-top_clinic .btn {
    margin: 0px auto;
    width: 70%;
  }
  .info-top_clinic h1.font-serif:before {
    position: absolute;
    content: '';
    height: 4px;
    background: #000;
    width: 25%;
    left: 37%;
    bottom: 10%;
  }
  .info-top_clinic h1.font-serif {
    padding-bottom: 50px;
    position: relative;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function () {
  const toggleHeader_clinic = document.getElementById('clinical_study-toggle_clinic');
  const clinical_stsBlock_clinic = document.querySelector('.clinical_study-blocks_clinic');
  const toggleIcon_clinic = toggleHeader_clinic.querySelector('.toggle-icon_clinic');

  toggleHeader_clinic.addEventListener('click', () => {
    const isCollapsed_clinic = clinical_stsBlock_clinic.classList.toggle('collapsed_clinic');
    toggleIcon_clinic.classList.toggle('open_clinic', !isCollapsed_clinic);
  });
});

document.addEventListener('DOMContentLoaded', function () {
  const items_clinic = document.querySelectorAll('[data-accordion_clinic]');

  items_clinic.forEach(item_clinic => {
    const toggle_clinic = item_clinic.querySelector('[data-accordion-toggle_clinic]');
    const desc_clinic = item_clinic.querySelector('.clinical_st-description_clinic');

    toggle_clinic.addEventListener('click', () => {
      const isOpen_clinic = item_clinic.classList.contains('open_clinic');
      items_clinic.forEach(i_clinic => {
        i_clinic.classList.remove('open_clinic');
        i_clinic.querySelector('.clinical_st-description_clinic').style.display = 'none';
        i_clinic.querySelector('.chevron_clinic').textContent = '+';
      });

      if (!isOpen_clinic) {
        item_clinic.classList.add('open_clinic');
        desc_clinic.style.display = 'block';
        item_clinic.querySelector('.chevron_clinic').textContent = '+';
      }
    });
  });
});
</script>
