{% schema %}
{
  "name": "Clinical Studies Section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "MixHers is clinically studied"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Crafted for balance, rooted in research, trusted by women."
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop MixHers Products"
    }
  ],
  "blocks": [
    {
      "type": "clinical_study",
      "name": "Clinical Study",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Study Title",
          "default": "Chaste tree berry extract"
        },
        {
          "type": "text",
          "id": "source",
          "label": "Source",
          "default": "National Library of Medicine"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Dose-Dependent Efficacy of the Chaste Tree Berry Extract in Patients Suffering from Premenstrual Syndrome"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Journal Link"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text",
          "default": "Read Journal Article"
        }
      ]
    }

  ],
  "presets": [
    {
      "name": "Clinical Studies Section",
      "blocks": [
        {
          "type": "clinical_study",
          "settings": {
            "title": "Chaste tree berry extract",
            "source": "National Library of Medicine",
            "description": "Dose-Dependent Efficacy of the Chaste Tree Berry Extract in Patients Suffering from Premenstrual Syndrome",
            "link_text": "Read Journal Article"
          }
        },
        {
          "type": "clinical_study",
          "settings": {
            "title": "Chaste tree berry extract",
            "source": "National Library of Medicine",
            "description": "He Z, Chen R, Zhou Y, et al. Treatment for Premenstrual Syndrome with Chaste Tree Berry Extract: Aprospective, Randomized, Multi-Center Placebo Controlled Study in China. Maturitas. 2009;63(1):99-103.",
            "link_text": "Read Journal Article"
          }
        },
        {
          "type": "clinical_study",
          "settings": {
            "title": "Chaste tree berry extract",
            "source": "National Library of Medicine",
            "description": "Treatment for the Premenstrual Syndrome with Agnus Castus Fruit Extract: Prospective, Randomised, Placebo Controlled Study",
            "link_text": "Read Journal Article"
          }
        },
        {
          "type": "clinical_study",
          "settings": {
            "title": "Recommended by doctors nationwide",
            "source": "Mixhers",
            "description": "Recommended by doctors nationwide. 300 MD & OB/GYNs surveyed and answered the question, \"Would you recommend Hertime? Why or why not?\"",
            "link_text": "Read Journal Article"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<div class="clinical_sts-list-section_clinic">
  <div class="clinical_sts-section-row_clinic">
    <div class="clinical_study-info_clinic">
      <div class="info-top_clinic">
        <div class="page-width">
          <h1 class="font-serif">{{ section.settings.heading }}</h1>
          <p>{{ section.settings.subheading }}</p>
          {% if section.settings.button_link != blank %}
            <a href="{{ section.settings.button_link }}" class="btn btn-black">
              {{ section.settings.button_label }}
            </a>
          {% endif %}
        </div>
      </div>
      {% if section.settings.bottom_image %}
        <div class="image-bottom_clinic">
          <img src="{{ section.settings.bottom_image | image_url }}" alt="Ingredients Image" height="" width=""/>
        </div>
      {% endif %}
    </div>

    <div class="clinical_studies-list_clinic">
      <h3 class="font-serif">Clinical Studies</h3>
      
      <div class="clinical_study-blocks_clinic">
        {% for block in section.blocks %}
          <div class="clinical_st-item_clinic">
            <div class="clinical_st-title_clinic">
              <strong>{{ block.settings.title }}</strong>
            </div>
            <div class="clinical_st-description_clinic">
              <div class="journal-entry_clinic">
                <div class="entry-heading_clinic">
                  <div class="icon_list">
                    <svg class="entry-icon_clinic" xmlns="http://www.w3.org/2000/svg" width="17" height="25" viewBox="0 0 17 25" fill="none">
                      <path d="M2.48538 5.60669H8.70519H13.5428V10.4443V19.4285H2.48538V5.60669Z" stroke="#1A1A1A" stroke-width="0.69109" stroke-linecap="round" stroke-linejoin="round"/>
                      <path d="M3.86783 11.7573H12.1609" stroke="#1A1A1A" stroke-width="0.69109"/>
                      <path d="M3.86783 9.54565H9.051" stroke="#1A1A1A" stroke-width="0.69109"/>
                      <path d="M3.86783 13.9688H12.1609" stroke="#1A1A1A" stroke-width="0.69109"/>
                      <path d="M3.86783 16.1804H12.1609" stroke="#1A1A1A" stroke-width="0.69109"/>
                      <path d="M13.5432 6.29785H14.623V10.8936V19.4286H5.94119" stroke="#1A1A1A" stroke-width="0.69109" stroke-linecap="square" stroke-linejoin="round"/>
                    </svg>
                  </div>
                  <div class="study_info">
                    <p class="head">{{ block.settings.source }}</p>
                    <p>{{ block.settings.description }}</p>
                    {% if block.settings.link != blank %}
                      <a class="read-article-btn_clinic" href="{{ block.settings.link }}" target="_blank">{{ block.settings.link_text }} â†’</a>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>     
    </div>
  </div>
</div>

<style>
.info-top_clinic {
  padding:80px 0px 80px 0px;
  max-width: 600px;
  width:100%;
  height: 100%;
