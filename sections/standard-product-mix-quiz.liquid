{% schema %}
{
  "name": "Product Quiz Quote",
  "tag": "section",
  "class": "standard-product-mix",
  "settings": [],
  "presets": [
    {
      "name": "Standard Product Made to Mix Quiz Quote"
    }
  ]
}
{% endschema %}

{% assign mix_image = product.metafields.rebrand.mix_image.value %}
{% assign mix_color = product.metafields.rebrand.mix_color.value %}

{% if mix_image %}
  <style>
    .standard-product-mix {
      background-color: #f5f5f5;
      padding: 2rem 1rem;
    }

    .mix-content-wrapper {
      max-width: 1400px;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 1.5rem;
    }

    .mix-heading-wrapper {
      position: relative;
      width: fit-content;
      margin: 0 auto;
    }

    .mix-heading-highlight {
      content: '';
      position: absolute;
      left: 0;
      right: 0;
      bottom: 0.25rem;
      height: 0.75rem;
      opacity: 0.5;
    }

    .mix-heading {
      font-size: 2.5rem;
      font-weight: 700;
      position: relative;
      z-index: 1;
    }

    .mix-text {
      font-size: 1rem;
      line-height: 1.5;
    }

    .mix-button {
      display: inline-block;
      padding: 0.75rem 1.5rem;
      border: 2px solid #000;
      text-decoration: none;
      font-weight: 600;
      margin-top: 1rem;
      background-color: transparent;
      color: #000;
    }

    .mix-image {
      width: 100%;
      max-width: 500px;
      height: auto;
    }

    @media (min-width: 768px) {
      .standard-product-mix {
        padding: 4rem 1rem;
      }

      .mix-content-wrapper {
        flex-direction: row;
        text-align: left;
        align-items: center;
        gap: 3rem;
      }

      .mix-heading {
        font-size: 4rem;
      }

      .mix-text {
        font-size: 1.125rem;
      }

      .mix-button {
        margin-top: 2rem;
      }
    }

    .mix-divider {
      border-top: 1px solid #000;
      margin-top: 2rem;
    }
  </style>

  <section class="standard-product-mix" aria-label="Made to Mix Section">
    <div class="mix-content-wrapper">
      <div class="mix-text-content">
        <div class="mix-heading-wrapper">
          <h2 class="mix-heading">Made to mix.</h2>
          <div class="mix-heading-highlight" style="background-color: {{ mix_color }};"></div>
        </div>
        <p class="mix-text">
          Combine products and flavors in a tailored-to-you Mixhers mocktail.<br />
          One sip double the benefits.
        </p>
        <a href="/pages/quiz" class="mix-button">Take the quiz</a>
      </div>
      <div class="mix-image-container">
        <img src="{{ mix_image | image_url }}" alt="Made to mix" class="mix-image" width="" height="">
      </div>
    </div>
    <div class="mix-divider"></div>
  </section>
{% endif %}
