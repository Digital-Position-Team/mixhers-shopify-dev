<section class="about-how-it-started">
  <div class="how-it-started__wrapper">
    <div class="how-it-started__text">
      <h2 class="how-it-started__title">
        {{ section.settings.title }}
        <div class="highlight-bar"></div>
      </h2>
      <div class="how-it-started__paragraphs">
        {% for block in section.blocks %}
         <div class="rich-paragraph">{{ block.settings.text }}</div>
        {% endfor %}
      </div>
    </div>
    <div class="how-it-started__image">
      <img src="{{ section.settings.image | image_url: width: 900 }}" width="" height="" alt="How it started image">
    </div>
  </div>
</section>

<style>
  .about-how-it-started {
    padding: 40px 20px;
  }

  .how-it-started__wrapper {
    max-width: 1357px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  @media (min-width: 768px) {
    .how-it-started__wrapper {
      flex-direction: row;
    }
  }

  .how-it-started__title {
    font-family: 'FAIRE_Sprig', serif;
    font-size: 36px;
    line-height: 42px;
    position: relative;
  }

  .highlight-bar {
    position: absolute;
    bottom: -5px;
    left: 0;
    height: 18px;
    width: 100%;
    background-color: #FFC0CB; /* pink-highlight */
    z-index: -1;
  }

  .how-it-started__paragraphs p {
    font-family: 'Buenos_Aires', sans-serif;
    font-size: 20px;
    line-height: 24px;
    margin-bottom: 1rem;
  }

  .how-it-started__image img {
    max-width: 400px;
    height: auto;
  }
</style>

{% schema %}
{
  "name": "How It Started",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "How it started"
    }
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "Paragraph",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Paragraph Text"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "How It Started",
      "blocks": [
        {
          "type": "text_block",
          "settings": {
            "text": "<p>Your paragraph here...</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}
