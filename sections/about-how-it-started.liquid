<section class="about-how-it-started" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="section-container">
    <div class="how-it-started-wrapper">
    <div class="how-it-started__text">
      <h2 class="how-it-started__title">
        {{ section.settings.title }}
        <div class="highlight-bar"></div>
      </h2>
      <div class="how-it-started__paragraphs">
        {{ section.settings.text }}
      </div>
    </div>
    <div class="how-it-started__image">
      <img src="{{ section.settings.image | image_url: width: 900 }}" alt="How it started image">
    </div>
    </div>
  </div>
</section>

<style>
  .about-how-it-started {
    padding: 40px 20px;
  }
  .section-container {
    padding-left:48px;
    padding-right:48px;
    max-width: 1357px;
    margin: 0 auto;
  }
  .how-it-started-wrapper{
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  .how-it-started__title {
    font-family: 'FAIRE_Sprig', serif;
    font-size: 36px;
    line-height: 42px;
    position: relative;
  }

  .highlight-bar {
    position: absolute;
    bottom: -5px;
    left: 0;
    height: 18px;
    width: 100%;
    background-color: #FFC0CB; /* pink-highlight */
    z-index: -1;
  }

  .how-it-started__paragraphs p {
    font-family: 'Buenos_Aires', sans-serif;
    font-size: 20px;
    line-height: 24px;
    margin-bottom: 1rem;
  }

  .how-it-started__image img {
    max-width: 400px;
    height: auto;
  }
  
  @media (min-width: 768px) {
    .how-it-started__wrapper {
      flex-direction: row;
    }
  }
  @media(max-width:1023px){
    .section-container{
    padding-left:20px;
    padding-right:20px;
    }
  }
</style>

{% schema %}
{
  "name": "How It Started",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "How it started"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Paragraph Text",
      "default": "<p>Your paragraph here...</p>"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top (px)",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom (px)",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "How It Started"
    }
  ]
}
{% endschema %}
